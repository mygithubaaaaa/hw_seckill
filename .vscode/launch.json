    "version": "0.2.0",
    "configurations": [
        {
        "name": "Python: Current File (uv venv)",
        "type": "python",
        "request": "launch",
        "program": "${file}", // 调试当前打开的文件
        "console": "integratedTerminal",
        // 指定 uv 环境的 Python 解释器路径
        "python": "${workspaceFolder}/.venv/bin/python", // macOS/Linux
        // "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe", // Windows
        "justMyCode": true
        },
        // 调试 main
        {
            "name": "Python: Main (uv venv)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python", // macOS/Linux
            // "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe", // Windows
            "justMyCode": true
        }
        
    ]
}